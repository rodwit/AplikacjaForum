<UserControl x:Class="AplikacjaKlient.Zalogowany.Glowny"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplikacjaKlient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="10*"/>
			<RowDefinition Height="90*"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50*"/>
				<ColumnDefinition Width="50*"/>
			</Grid.ColumnDefinitions>
			<Grid Grid.Column="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="50*"/>
					<ColumnDefinition Width="50*"/>
				</Grid.ColumnDefinitions>
				<Label Grid.Column="0" Content="Zalogowany jako :" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<Label Grid.Column="1" x:Name="LabelUzytkownik" Content="nic" VerticalAlignment="Center" HorizontalAlignment="Left"/>
			</Grid>
			
			<Button Grid.Column="1" x:Name="ButtonWyloguj" Content="Wyloguj" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,5"/>

		</Grid>

		<ContentControl x:Name="contentControl" Grid.Row="1" Content="{Binding}" />



	</Grid>
</UserControl>
