<Window x:Class="AplikacjaKlient.Zalogowany.DodajWatek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplikacjaKlient.Zalogowany"
        mc:Ignorable="d"
		WindowStartupLocation="CenterOwner"
        Title="Dodaj nowy watek" Height="134" Width="535">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<DockPanel>
			<Label FontSize="20" DockPanel.Dock="Left" Content="Temat: " VerticalContentAlignment="Center"/>
			<TextBox x:Name="TextBoxTemat" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" />
		</DockPanel>
		<WrapPanel Grid.Row="1" HorizontalAlignment="Right">
			<Button x:Name="ButtonOk" FontSize="15" Content="Ok" Margin="0,0,5,5" Width="50" Click="ButtonOk_Click"/>
			<Button x:Name="ButtonAnuluj" FontSize="15" Content="Anuluj" Margin="0,0,5,5" Width="50" Click="ButtonAnuluj_Click"/>
		</WrapPanel>
	</Grid>
    
</Window>
